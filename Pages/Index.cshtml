@page
@model IndexModel
@{
    ViewData["Title"] = "Toy Store";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Kids Toy Store!</h1>
    <p>Discover amazing toys for children of all ages</p>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="/images/teddy-bear.jpg" class="card-img-top" alt="Teddy Bear" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">Cuddly Teddy Bear</h5>
                    <p class="card-text">Soft and huggable teddy bear for your little ones.</p>
                    <p class="card-text"><strong>$19.99</strong></p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="/images/lego-set.jpg" class="card-img-top" alt="Lego Set" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">Building Blocks Set</h5>
                    <p class="card-text">Creative building blocks for endless fun.</p>
                    <p class="card-text"><strong>$29.99</strong></p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="/images/remote-car.jpg" class="card-img-top" alt="Remote Car" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">Remote Control Car</h5>
                    <p class="card-text">Fast and fun remote control car with lights.</p>
                    <p class="card-text"><strong>$24.99</strong></p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <h2>About Our Store</h2>
    <p>We provide the best quality toys for children, ensuring safety and fun!</p>
</div>